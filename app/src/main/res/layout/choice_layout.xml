<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_from_choice_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/hint_from"
            android:textColor="@color/colorRed" />

        <Button
            android:id="@+id/btn_from_choice_layout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_from_choice_layout"
            app:layout_constraintStart_toStartOf="@id/tv_from_choice_layout"
            app:layout_constraintEnd_toEndOf="@id/tv_from_choice_layout"
            android:text="Откуда?"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_button"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_where_choice_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_from_choice_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/hint_where"
            android:textColor="@color/colorRed"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btn_where_choice_layout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_where_choice_layout"
            app:layout_constraintStart_toStartOf="@id/tv_where_choice_layout"
            app:layout_constraintEnd_toEndOf="@id/tv_where_choice_layout"
            android:text="Куда?"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_button"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_when_choice_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_where_choice_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/hint_when"
            android:textColor="@color/colorRed"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btn_when_choice_layout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_when_choice_layout"
            app:layout_constraintStart_toStartOf="@id/tv_when_choice_layout"
            app:layout_constraintEnd_toEndOf="@id/tv_when_choice_layout"
            android:text="Куда?"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_button"
            android:layout_marginTop="10dp" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>